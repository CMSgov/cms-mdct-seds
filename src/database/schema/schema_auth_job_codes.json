{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Auth Job Codes",
  "description": "LDAP job codes and available roles",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "job_code": {
        "type": "string",
        "description": "LDAP job code"
      },
      "role": {
        "type": "array",
        "description": "List of available roles for associated LDAP group",
        "items": {
          "type": "string"
        }
      }
    },
    "required": ["job_code", "role"]
  }
}
